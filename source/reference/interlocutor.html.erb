    "interlocutor": {
      "distinct_id": "<span class="js-distinct-id"></span>",
      "first_name": "John",
      "last_name": "Doe",
      "gender": "male",
      "locale": "US",
      "profile_picture": "http://example.com/profile.jpg"
      "timezone": "Eastern Time (US & Canada)",
